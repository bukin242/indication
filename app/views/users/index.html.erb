<h1>Пользователи</h1>
<% if @users.present? %>
<table class="table">
  <tr>
    <th>Логин</th>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Адрес</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user_path(user.id) %></td>
      <td><%= user.name %></td>
      <td><%= user.lastname %></td>
      <td><%= user.address %></td>
    </tr>
  <% end %>
</table>
<% else %>
Пользователей нет.
<% end %>
